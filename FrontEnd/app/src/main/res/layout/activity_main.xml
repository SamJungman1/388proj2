<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/profileFragment"
        android:layout_width="412dp"
        android:layout_height="681dp"
        class="com.example.proj2.profileFragment"
        app:layout_constraintBottom_toTopOf="@id/myList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/otListFrag"
        android:layout_width="412dp"
        android:layout_height="681dp"
        class="com.example.proj2.otListFrag"
        app:layout_constraintBottom_toTopOf="@id/myList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/newListing"
        android:layout_width="412dp"
        android:layout_height="681dp"
        class="com.example.proj2.newListing"
        app:layout_constraintBottom_toTopOf="@id/myList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/myListing"
        android:layout_width="412dp"
        android:layout_height="681dp"
        class="com.example.proj2.myListing"
        app:layout_constraintBottom_toTopOf="@id/myList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/otherListing"
        android:layout_width="412dp"
        android:layout_height="681dp"
        class="com.example.proj2.otherListing"
        app:layout_constraintBottom_toTopOf="@id/myList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <fragment
        android:id="@+id/myListFrag"
        android:layout_width="412dp"
        android:layout_height="681dp"
        class="com.example.proj2.myListFrag"
        app:layout_constraintBottom_toTopOf="@id/myList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Profile"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/myList"
        />

    <Button
        android:id="@+id/myList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="My Listings"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profile"
        app:layout_constraintStart_toEndOf="@+id/otListings"
        />

    <Button
        android:id="@+id/otListings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="See Other Listings"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/myList"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>